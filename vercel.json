{
    "version": 2,
    "build": {
        "env": {
            "OPENAI_API_KEY": "@openai-api-key"
        }
    },
    "functions": {
        "api/index.py": {
            "memory": 1024,
            "maxDuration": 10
        }
    },
    "routes": [
        {
            "src": "/api/chat",
            "dest": "api/index.py"
        },
        {
            "src": "/(.*)",
            "dest": "api/index.py"
        }
    ]
} 